<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/underbar"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingBottom="0dp"
    android:paddingTop="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="0dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="0dp"
        android:paddingBottom="0dp">

        <TextView
            android:id="@+id/group_name_tt"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:background="@drawable/inner_box_group"
            android:gravity="center"
            android:padding="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#555555"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add_group_person_btn"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/addbtn"
            android:textColor="#4682b4"
            android:textSize="10sp" />

        <Button
            android:id="@+id/del_group_btn"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:background="@drawable/del_group"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="DEL"
            android:textColor="#4682b4"
            android:textSize="10sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_group_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:visibility="gone" />

</LinearLayout>